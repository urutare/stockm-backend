<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- 
        OWASP Dependency Check Suppressions for Ingenzi CIS
        This file contains suppression rules for false positives and accepted risks
    -->
    
    <!-- Common false positives for Spring Boot applications -->
    <suppress>
        <notes><![CDATA[
            Spring Boot starters often have dependencies that may trigger false positives
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework\.boot/spring\-boot\-starter.*$</packageUrl>
        <cve>CVE-2016-1000027</cve>
    </suppress>
    
    <!-- Suppress known issues that are not applicable to our usage -->
    <suppress>
        <notes><![CDATA[
            This CVE affects direct file system access which is not used in our application
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.apache\.commons/commons\-compress.*$</packageUrl>
        <cve>CVE-2021-35515</cve>
        <cve>CVE-2021-35516</cve>
        <cve>CVE-2021-35517</cve>
        <cve>CVE-2021-36090</cve>
    </suppress>
    
    <!-- Test dependencies -->
    <suppress>
        <notes><![CDATA[
            Test scope dependencies have reduced risk as they're not deployed
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/junit/junit.*$</packageUrl>
        <cvssBelow>7.0</cvssBelow>
    </suppress>
    
    <!-- Development tools -->
    <suppress>
        <notes><![CDATA[
            Development scope tools are not deployed to production
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.springframework\.boot/spring\-boot\-devtools.*$</packageUrl>
    </suppress>
    
